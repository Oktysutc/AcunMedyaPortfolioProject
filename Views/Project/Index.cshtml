@model List<AcunMedyaPortfolioProject.Models.Project>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Index</h2>

<div class="container">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Proje adı</th>
                <th>kategori adı</th>
                <th>kapak adı</th>
                <th>açıklama</th>
                <th>Proje Linki</th>
                <th>güncelle</th>
                <th>kaldır</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var project in Model)
            {
                <tr>

                    <td>@project.Id</td>
                    <td>@project.Name</td>
                    <td>@project.Category.Name</td>
                    <td><img src="@project.CoverImageUrl" /></td>
                    <td>@project.Description</td>
                    <td>@project.ProjectLink</td>
                    <td>
                        <a href="/Project/UpdateProject/@project.Id" class="btn btn-success">Güncelle</a>
                    </td>
                    <td>
                        <a href="/Project/DeleteProject/@project.Id" class="btn btn-danger">Kaldır</a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
    <a href="/Project/CreateProject" class="btn btn-primary">Yeni Project ekle</a>
</div>

